<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <!-- Header del género -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Género"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGeneroDetalle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Ver más"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TextButton"
            android:textColor="@color/primary"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end"
            app:iconTint="@color/primary"
            app:iconSize="18dp" />

    </LinearLayout>

    <!-- RecyclerView horizontal de libros -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLibrosGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="4dp"
        android:paddingEnd="4dp" />

    <!-- Placeholder cuando no hay libros -->
    <LinearLayout
        android:id="@+id/tvEmptyGenero"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_book"
            android:alpha="0.3"
            app:tint="@color/text_secondary"
            android:contentDescription="Sin libros" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin libros en este género"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>
